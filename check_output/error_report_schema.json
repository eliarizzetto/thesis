{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "http://example.com/example.json",
  "type": "array",
  "items": {
    "type": "object",
    "properties": {
      "validation_level": {
        "type": "string",
        "enum": [
          "csv_wellformedness",
          "external_syntax",
          "semantic"
        ]
      },
      "error_type": {
        "type": "string",
        "enum": [
          "error",
          "warning"
        ]
      },
      "error_label": {
        "type": "string"
      },
      "message": {
        "type": "string"
      },
      "valid": {
        "type": "boolean"
      },
      "position": {
        "type": "object",
        "properties": {
          "located_in": {
            "type": "string",
            "enum": [
              "row",
              "field",
              "item"
            ]
          },
          "table": {
            "type": "object",
            "patternProperties": {
              "^[0-9]+$": {
                "type": "object",
                "additionalProperties": {
                  "propertyNames": {
                    "enum": [
                      "id",
                      "title",
                      "author",
                      "pub_date",
                      "venue",
                      "volume",
                      "issue",
                      "page",
                      "type",
                      "publisher",
                      "editor",
                      "citing_id",
                      "citing_publication_date",
                      "cited_id",
                      "cited_publication_date"
                    ]
                  },
                  "type": "array",
                  "items": {
                    "type": ["integer", null]
                  }
                },
                "minProperties": 1
              }
            },
            "additionalProperties": false,
            "minProperties": 1
          }
        },
        "required": [
          "located_in",
          "table"
        ],
        "additionalProperties": false
      }
    },
    "required": [
      "validation_level",
      "error_type",
      "error_label",
      "message",
      "position"
    ],
    "if": {
      "properties": {
        "error_type": {
          "const": "error"
        }
      }
    },
    "then": {
      "properties": {
        "valid": {
          "const": false
        }
      }
    },
    "additionalProperties": false
},
  "uniqueItems": false
}